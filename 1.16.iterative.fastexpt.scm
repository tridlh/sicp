(define (fast-expt1 b n)
  (define (fe b n acc)
    (cond ((= n 0) acc)
          ((even? n) (fe (square b) (/ n 2) acc))
          (else (fe b (- n 1) (* acc b)))))
  (fe b n 1))
(define (even? n)
  (= (remainder n 2) 0))
